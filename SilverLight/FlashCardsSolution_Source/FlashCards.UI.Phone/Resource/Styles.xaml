    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF0441A0" />

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FF098FD5" />
    
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
