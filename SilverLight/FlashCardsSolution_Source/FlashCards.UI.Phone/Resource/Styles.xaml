                <TextBlock Text="{TemplateBinding Content}" TextWrapping="Wrap" d:LayoutOverrides="Width, Height" FontFamily="Segoe UI Light" FontSize="21.333" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="22,0,0,0"/>
                <Image HorizontalAlignment="Left" VerticalAlignment="Center" Width="Auto" Source="../../Resource/Images/infoicon.png" Stretch="None"/>
            </Grid>
        </Grid>
       
